{
  "name": "dotenv-mask-editor",
  "displayName": "Dotenv Mask Editor",
  "description": "Secure visual editor for .env files that masks sensitive secrets while allowing easy editing",
  "version": "1.0.2",
  "publisher": "xinbenlv",
  "icon": "dotenv-mask-editor-logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/xinbenlv/dotenv-mask-editor.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:envSecretMasking.envEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "envSecretMasking.envEditor",
        "displayName": "Env Secret Masking Editor",
        "selector": [
          {
            "filenamePattern": ".env"
          },
          {
            "filenamePattern": ".env.*"
          },
          {
            "filenamePattern": "*.env"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
      "title": "Dotenv Mask Editor",
      "properties": {
        "envSecretMasking.filePatterns": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Additional file glob patterns to match (in addition to .env and .env.*)"
        }
      }
    },
    "workbench.editorAssociations": [
      {
        "viewType": "envSecretMasking.envEditor",
        "filenamePattern": ".env"
      },
      {
        "viewType": "envSecretMasking.envEditor",
        "filenamePattern": ".env.*"
      },
      {
        "viewType": "envSecretMasking.envEditor",
        "filenamePattern": "*.env"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "release": "npm run compile && npx --yes @vscode/vsce package && cursor --install-extension dotenv-mask-editor-1.0.1.vsix --force"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.0.0"
  }
}
